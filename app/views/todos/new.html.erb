<h1>New To-Do List Item</h1>

<div class="row">
  <div class="col-md-12">
    <%= form_for [@list, @todo] do |f| %>
      <div class="form-group">
        <%= f.label :description %>
        <%= f.text_area :body, rows: 5, class: 'form-control', placeholder: "Enter to-do list item description at least 5 characters long" %>
      </div>
      <%= f.submit "Save", class: 'btn btn-success' %>
    <% end %>
  </div>
</div>